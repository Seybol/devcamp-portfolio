<div class="col-md-4">
  <div class="card mb-4 box-shadow" data-id=<%= portfolio_item.id %>>
    <%= image_tag portfolio_item.thumb_image.to_s  unless portfolio_item.thumb_image.nil? %>
    <div class="card-body">
      <span>
        <p class="card-text"><%= portfolio_item.title %></p>
      </span>
      <div class="d-flex justify-content-between align-items-center">
        <div class="btn-group">
          <button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to 'View', portfolio_show_path(portfolio_item)%></button>
          <% if logged_in?(:site_admin) %>
            <button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to "Edit", edit_portfolio_path(portfolio_item) %></button>
          <% end %>
        </div>
        <small class="text-muted">9 mins</small>
      </div>
    </div>
  </div>
</div>

